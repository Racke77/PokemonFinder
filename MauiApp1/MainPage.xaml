<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiApp1.Models"
             xmlns:vm="clr-namespace:MauiApp1.ViewModels"
             x:DataType="vm:MainVM"
             x:Class="MauiApp1.MainPage"
             Title="{Binding Title}">

    <Grid RowDefinitions="auto,auto, *"
          ColumnDefinitions="*">
        <VerticalStackLayout>
            <HorizontalStackLayout Margin="50,0,50,5" >
                <Entry MinimumWidthRequest="40"
                       Text="{Binding StartPokemon}" BackgroundColor="LightGray"></Entry>
                <Label Margin="5" VerticalTextAlignment="Center" Text="First Pokedex Number"></Label>
            </HorizontalStackLayout>
            <HorizontalStackLayout Margin="50,0,50,20">
                <Entry MinimumWidthRequest="40" 
                       Text="{Binding StopPokemon}" BackgroundColor="LightGray"></Entry>
                <Label Margin="5"  VerticalTextAlignment="Center" Text="Last Pokedex Number"></Label>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <Button Grid.Row="1" Text="Get Pokemon"
                Command="{Binding GetCommand}" CommandParameter="{Binding }"></Button>
        <CollectionView Margin="20,0,20,0" Grid.Row="2" ItemsSource="{Binding Pokemons}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:PokemonDTO">
                    <Border HeightRequest="75" Margin="5" Padding="5" BackgroundColor="LightGray">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainVM}}, Path=GoToDetailCommand}" 
                                                  CommandParameter="{Binding .}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout>
                            <Image HeightRequest="50" WidthRequest="50" Aspect="AspectFill" Source="{Binding Image}"/>
                            <VerticalStackLayout Margin="20,5">
                                <Label Text="{Binding Id}"></Label>
                                <Label Text="{Binding Name}"></Label>
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>

</ContentPage>
